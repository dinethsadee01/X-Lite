# Environment Variables (Backend & ML)

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Model Settings
MODEL_CHECKPOINT_PATH=ml/models/checkpoints/student_best.pth
USE_GPU=true
BATCH_SIZE=32

# Dataset Paths
DATA_DIR=data
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
METADATA_CSV=data/Data_Entry_2017.csv

# Training Settings
LEARNING_RATE=0.001
EPOCHS=30
EARLY_STOPPING_PATIENCE=7

# Knowledge Distillation
KD_TEMPERATURE=4.0
KD_ALPHA=0.7

# Logging
LOG_LEVEL=INFO
TENSORBOARD_LOG_DIR=logs/tensorboard

# Weights & Biases (Optional)
WANDB_PROJECT=x-lite-chest-xray
WANDB_ENTITY=your_username
WANDB_API_KEY=your_api_key

# Database (Optional)
DATABASE_URL=sqlite:///./x_lite.db

# Security
SECRET_KEY=your_secret_key_here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
